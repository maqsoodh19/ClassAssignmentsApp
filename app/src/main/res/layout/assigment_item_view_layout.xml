<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="6dp"
    android:padding="10dp"

    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30363636">

        <TextView
            android:id="@+id/txt_assignment_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:text="Assignment Name"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/imgBtn_assignment_download"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_assignment_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Assignment Date"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_assignment_name"
            app:layout_constraintStart_toStartOf="@+id/txt_assignment_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_assignment_name" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/assignment_icon"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imgBtn_assignment_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/download_icon"
            tools:ignore="VectorDrawableCompat" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>