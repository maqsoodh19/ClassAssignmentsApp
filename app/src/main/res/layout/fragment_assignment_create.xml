<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:clickable="true"
    tools:context="com.example.maqso.classassignmentsapp.Fragments.AssignmentCreateFragment">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="12dp"
       >


       <EditText
           android:id="@+id/txt_fragment_assignment_name"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="72dp"
           android:ems="10"
           android:hint="Assignment Name"
           android:inputType="textPersonName"
           android:textColor="@color/white"
           android:textColorHint="@color/white"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView2" />

       <EditText
           android:id="@+id/txt_fragment_assignment_marks"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:ems="10"
           android:inputType="number"
           android:hint="Total Marks"
           android:textColor="@color/white"
           android:textColorHint="@color/white"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_name" />

       <EditText
           android:id="@+id/txt_fragment_assignment_desription"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:ems="10"
           android:inputType="textMultiLine"
           android:hint="Description.."
           android:textColor="@color/white"
           android:textColorHint="@color/white"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_marks" />

       <ImageButton
           android:id="@+id/imgBtn_fragment_assignment_UploadBtn"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:layout_marginEnd="16dp"
           android:layout_marginRight="16dp"
           android:layout_marginTop="8dp"
           android:src="@android:drawable/ic_menu_upload"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_desription" />

       <TextView
           android:id="@+id/txt_fragment_assignment_seletedFileName"
           android:layout_width="0dp"
           android:layout_height="32dp"
           android:layout_marginTop="20dp"
           android:gravity="center|left"
           android:hint="Upload Assignment File"
           android:textColor="@color/white"
           android:textColorHint="@color/white"
           app:layout_constraintEnd_toStartOf="@+id/imgBtn_fragment_assignment_UploadBtn"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_desription" />

       <Button
           android:id="@+id/btn_fragment_assignmentCreate_Cancel"
           android:layout_width="176dp"
           android:layout_height="0dp"
           android:layout_marginLeft="16dp"
           android:layout_marginStart="16dp"
           android:layout_marginTop="84dp"
           android:text="Cancel"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_seletedFileName" />

       <Button
           android:id="@+id/btn_fragment_assignmentCreate_Upload"
           android:layout_width="175dp"
           android:layout_height="0dp"
           android:layout_marginEnd="16dp"
           android:layout_marginRight="16dp"
           android:layout_marginTop="84dp"
           android:text="upload"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintStart_toEndOf="@+id/btn_fragment_assignmentCreate_Cancel"
           app:layout_constraintTop_toBottomOf="@+id/txt_fragment_assignment_seletedFileName" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="80dp"
           android:gravity="center"
           android:text="New Assignment"
           android:textColor="@color/white"
           android:textSize="40sp"
           android:textStyle="italic"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

   </android.support.constraint.ConstraintLayout>


</FrameLayout>
